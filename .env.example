# ==============================================================================
# TEAMLEADER SDK CONFIGURATION
# ==============================================================================
# Complete configuration example for the Teamleader Focus Laravel SDK
# Copy this to your .env file and configure with your values

# ------------------------------------------------------------------------------
# Required: OAuth 2.0 Credentials
# ------------------------------------------------------------------------------
# Get these from https://marketplace.teamleader.eu/
TEAMLEADER_CLIENT_ID=
TEAMLEADER_CLIENT_SECRET=
TEAMLEADER_REDIRECT_URI=${APP_URL}/auth/teamleader/callback

# ------------------------------------------------------------------------------
# API Configuration
# ------------------------------------------------------------------------------
# Default API version (recommended to use latest)
TEAMLEADER_API_VERSION=2023-09-26

# API base URLs (default values shown, usually don't need to change)
# TEAMLEADER_BASE_URL=https://api.focus.teamleader.eu
# TEAMLEADER_AUTH_URL=https://focus.teamleader.eu

# ------------------------------------------------------------------------------
# Configuration Validation
# ------------------------------------------------------------------------------
# Validate configuration on application boot
# Recommended: true for development, true for production, false for testing
TEAMLEADER_VALIDATE_ON_BOOT=false

# ------------------------------------------------------------------------------
# HTTP Client Configuration
# ------------------------------------------------------------------------------
# Request timeouts (in seconds)
TEAMLEADER_API_TIMEOUT=30
TEAMLEADER_API_CONNECT_TIMEOUT=10
TEAMLEADER_API_READ_TIMEOUT=25

# Retry configuration
TEAMLEADER_API_RETRY_ATTEMPTS=3
TEAMLEADER_API_RETRY_DELAY=1000

# ------------------------------------------------------------------------------
# Rate Limiting
# ------------------------------------------------------------------------------
# Enable automatic rate limiting (recommended: true)
TEAMLEADER_RATE_LIMITING_ENABLED=true

# Teamleader's rate limit is 200 requests per minute
TEAMLEADER_RATE_LIMIT=200

# Start throttling at 70% of rate limit
TEAMLEADER_THROTTLE_THRESHOLD=0.7

# Use aggressive throttling (more conservative)
TEAMLEADER_AGGRESSIVE_THROTTLING=true

# Respect Retry-After headers from 429 responses
TEAMLEADER_RESPECT_RETRY_AFTER=true

# ------------------------------------------------------------------------------
# Sideloading (Loading Related Resources)
# ------------------------------------------------------------------------------
# Enable sideloading feature
TEAMLEADER_SIDELOADING_ENABLED=true

# Validate include names before sending request
TEAMLEADER_VALIDATE_INCLUDES=true

# Maximum number of includes per request
TEAMLEADER_MAX_INCLUDES=10

# ------------------------------------------------------------------------------
# Logging
# ------------------------------------------------------------------------------
# Enable general SDK logging
TEAMLEADER_LOGGING_ENABLED=true

# Log all API requests (verbose, use only in development)
TEAMLEADER_LOG_REQUESTS=false

# Log all API responses (verbose, use only in development)
TEAMLEADER_LOG_RESPONSES=false

# Log rate limit information
TEAMLEADER_LOG_RATE_LIMITS=true

# Log token refresh events
TEAMLEADER_LOG_TOKEN_REFRESH=true

# Laravel log channel to use (default uses app default)
# TEAMLEADER_LOG_CHANNEL=stack

# Sanitize sensitive data in logs (HIGHLY RECOMMENDED)
TEAMLEADER_SANITIZE_LOGS=true

# ------------------------------------------------------------------------------
# Caching
# ------------------------------------------------------------------------------
# Enable response caching for static endpoints
# IMPORTANT: In production, use redis or database cache driver, NOT file!
TEAMLEADER_CACHING_ENABLED=false

# Default cache TTL in seconds (3600 = 1 hour)
TEAMLEADER_CACHE_TTL=3600

# Cache store to use (default uses Laravel's default cache)
# PRODUCTION: Use 'redis' or 'database', NOT 'file' or 'array'
TEAMLEADER_CACHE_STORE=

# ------------------------------------------------------------------------------
# Development & Testing
# ------------------------------------------------------------------------------
# Enable sandbox mode (if available from Teamleader)
TEAMLEADER_SANDBOX_MODE=false

# Use mocked responses instead of real API calls
TEAMLEADER_MOCK_RESPONSES=false

# Enable verbose debug logging
TEAMLEADER_DEBUG_MODE=false

# Log every single API request (very verbose)
TEAMLEADER_LOG_ALL_REQUESTS=false

# ------------------------------------------------------------------------------
# Error Handling
# ------------------------------------------------------------------------------
# Throw exceptions on API errors (recommended: false for production)
# When false, errors are returned in response arrays
# When true, exceptions are thrown and must be caught
TEAMLEADER_THROW_EXCEPTIONS=false

# Log errors (recommended: true)
TEAMLEADER_LOG_ERRORS=true

# Include stack traces in error logs (recommended: false for production)
TEAMLEADER_INCLUDE_STACK_TRACE=false

# Parse Teamleader error responses into readable format
TEAMLEADER_PARSE_TL_ERRORS=true

# ==============================================================================
# ENVIRONMENT-SPECIFIC RECOMMENDATIONS
# ==============================================================================

# ------------------------------------------------------------------------------
# DEVELOPMENT ENVIRONMENT
# ------------------------------------------------------------------------------
# TEAMLEADER_VALIDATE_ON_BOOT=true
# TEAMLEADER_LOGGING_ENABLED=true
# TEAMLEADER_DEBUG_MODE=true
# TEAMLEADER_THROW_EXCEPTIONS=true (easier debugging)
# TEAMLEADER_CACHE_STORE=file (acceptable for development)
# TEAMLEADER_CACHING_ENABLED=false (see fresh data)
# TEAMLEADER_SANITIZE_LOGS=false

# ------------------------------------------------------------------------------
# PRODUCTION ENVIRONMENT
# ------------------------------------------------------------------------------
# TEAMLEADER_VALIDATE_ON_BOOT=true (logs critical issues)
# TEAMLEADER_LOGGING_ENABLED=true
# TEAMLEADER_DEBUG_MODE=false
# TEAMLEADER_LOG_REQUESTS=false
# TEAMLEADER_LOG_RESPONSES=false
# TEAMLEADER_THROW_EXCEPTIONS=false (handle gracefully)
# TEAMLEADER_CACHE_STORE=redis (use Redis!)
# TEAMLEADER_CACHING_ENABLED=true (improve performance)
# TEAMLEADER_INCLUDE_STACK_TRACE=false (security)
# TEAMLEADER_SANITIZE_LOGS=true

# ------------------------------------------------------------------------------
# TESTING ENVIRONMENT
# ------------------------------------------------------------------------------
# TEAMLEADER_VALIDATE_ON_BOOT=false
# TEAMLEADER_LOGGING_ENABLED=false (reduce noise)
# TEAMLEADER_MOCK_RESPONSES=true (don't hit real API)
# TEAMLEADER_THROW_EXCEPTIONS=true (fail tests on errors)
# TEAMLEADER_CACHING_ENABLED=false
# TEAMLEADER_RATE_LIMITING_ENABLED=false
# TEAMLEADER_SANITIZE_LOGS=true

# ==============================================================================
# SECURITY NOTES
# ==============================================================================
#
# 1. NEVER commit this file with real credentials to version control!
# 2. In production, ALWAYS use redis or database cache driver
# 3. Ensure .env is in .gitignore
# 4. Use strong, unique CLIENT_SECRET (never reuse passwords)
# 5. Use HTTPS for REDIRECT_URI in production
# 6. Regularly rotate CLIENT_SECRET if possible
# 7. Monitor logs for suspicious authentication attempts
# 8. Keep SDK updated for security patches
#
# For more security information, see:
# https://github.com/mcore-services-bv/teamleader-sdk/blob/main/docs/security/token-storage.md
#
# ==============================================================================
